{
  "name": "recode/ecommerce",
  "description": "A next-generation e-commerce engine powered by cutting-edge technology",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Recode\\Ecommerce\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Tools\\Behat\\": "tools/behat/src"
    }
  },
  "authors": [
    {
      "name": "Jacob Tobiasz",
      "email": "jacob@alphpaca.io"
    }
  ],
  "require": {
    "php": "^8.4",
    "doctrine/collections": "^2.3",
    "moneyphp/money": "^4.7",
    "symfony/intl": "^5.4 || ^6.4 || ^7.3",
    "symfony/uid": "^5.4 || ^6.4 || ^7.3",
    "dave-liddament/php-language-extensions": "^0.9.0"
  },
  "scripts": {
    "post-update-cmd": [
      "@update-tools"
    ],
    "post-install-cmd": [
      "@update-tools"
    ],
    "update-tools": [
      "@update-tools:behat",
      "@update-tools:infection",
      "@update-tools:pest",
      "@update-tools:php-cs-fixer",
      "@update-tools:phpstan"
    ],
    "update-tools:behat": "composer update -n -d tools/behat",
    "update-tools:infection": "composer update -n -d tools/infection",
    "update-tools:pest": "composer update -n -d tools/pest",
    "update-tools:php-cs-fixer": "composer update -n -d tools/php-cs-fixer",
    "update-tools:phpstan": "composer update -n -d tools/phpstan"
  }
}
