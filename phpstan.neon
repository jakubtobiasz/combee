includes:
    - tools/phpstan/vendor/dave-liddament/phpstan-php-language-extensions/extension.neon
    - tools/phpstan/vendor/phpat/phpat/extension.neon
    - tools/phpstan/vendor/phpstan/phpstan-doctrine/extension.neon
    - tools/phpstan/vendor/phpstan/phpstan-phpunit/extension.neon
    - tools/phpstan/vendor/phpstan/phpstan-phpunit/rules.neon

parameters:
    level: 8
    treatPhpDocTypesAsCertain: false
    paths:
        - src
        - tests
    bootstrapFiles:
        - tools/phpunit/vendor/autoload.php
    phpLanguageExtensions:
        mode: namespace
        testNamespace: 'Tests'

services:
    -
        class: Tests\Architecture\OrderingTest
        tags:
            - phpat.test
    -
        class: Tests\Architecture\ProductCatalogTest
        tags:
            - phpat.test